<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="4dp"
    android:orientation="horizontal"
    android:padding="20dp"
    app:cardBackgroundColor="#FFCCBC"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/coworker_item"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:scaleType="centerCrop">

        <ImageView
            android:id="@+id/coworker_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/coworker_photo_description" />

        <TextView
            android:id="@+id/coworker_name"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/coworker_photo"
            android:textColor="#000"
            android:textStyle="italic" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>