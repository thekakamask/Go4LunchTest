<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restaurant_user_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="#FFCCBC"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/restaurant_user_photo"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:contentDescription="restaurantUserPhoto"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:id="@+id/restaurant_user_name"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/restaurant_user_photo"
            android:textColor="#000"
            android:textStyle="italic" />





    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>