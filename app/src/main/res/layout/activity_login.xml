<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/go4lunch"
    tools:context=".activities.ui.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/connection_btn">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/google_btn"
            android:layout_width="212dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:background="#ffff"
            android:drawableStart="@drawable/google_24dp"
            android:hint="Continue with Google"
            android:onClick="onClickGoogleBtn"
            android:paddingStart="6dp"/>





        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/facebook_btn"
            android:layout_height="37dp"
            android:layout_width="212dp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/facebook_24dp"
            android:background="#3b5998"
            android:hint="Continue with Facebook"
            android:layout_marginBottom="150dp"
            android:onClick="onClickFacebookBtn"
            android:paddingStart="6dp"/>






    </LinearLayout>

</RelativeLayout>