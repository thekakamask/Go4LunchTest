<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!--<item name="colorOnPrimary">@color/colorAccent</item>-->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!--Action bar-->
    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
    </style>



    <style name="RatingBarRestaurant" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">#FFCA28</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name= "colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--For Styleable Toasts-->
    <style name="personalizedToast">
        <item name="stColorBackground">#FFEE58</item>
        <item name="stTextColor">#000</item>
        <item name="stIconStart">@drawable/notification_helper_launch_black</item>
        <item name="stStrokeColor">@color/colorPrimaryDark</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="stLength">SHORT</item>
    </style>

    <!-- For fragment chat -->
</resources>